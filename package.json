{
  "name": "webpack-config",
  "version": "1.0.0",
  "description": "Webpack v4 config",
  "main": "index.js",
  "scripts": {
    "start": "npm run dev",
    "build": "webpack --mode production --config webpack.prod.js",
    "dev": "webpack-dev-server --open --hot --mode development --config webpack.dev.js",
    "deploy": "npm run build && git add -A && git commit -nm ':rocket: deploy' && git push && git-directory-deploy --directory build --branch gh-pages"
  },
